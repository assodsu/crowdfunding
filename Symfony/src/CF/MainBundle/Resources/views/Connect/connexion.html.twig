{% extends "CFMainBundle::layout.html.twig" %}

{% block title %}
	Connexion-{{ parent() }}
{% endblock %}

{% block navbarConnect %} class="active" {% endblock %}

{% block stylesheet %}
	{{ parent() }}
	<link href="{{asset('css/style_connect.css')}}" rel="stylesheet"/>
{% endblock %}



{% block body %}
	

		<div id='form' class="center-block">
			
			<div class="col-sm-12">
				<h3>Connectez vous pour accéder à votre compte utilisateur</h3>
			</div>

			<div class="form-horizontal">
				{# mise en place d'une classe pour le formulaire #}
				{{	form_start(form) }}
				
				{# gestion des erreurs générales du formulaire #}
				{{ form_errors(form) }}
				
				{{ form_widget(form) }}
			

				<div class="col-sm-15" id="liens">
					<a href="#">Mot de passe perdu</a>
					<br/>
					<p>Pas encore inscrit ? <a href="{{ path('cf_main_register') }}">inscrivez vous</a></p>
				</div>
				
				<div class="form-group" id="valid">
		    		<div class="col-sm-offset-5 col-sm-10">		
						{{ form_widget(form.connexion, {'attr': {'class': 'btn btn-primary'}}) }}
					</div>
				</div>	
	  
	  			{# Fermeture de la balise <form> du formulaire HTML #}
	  			{{ form_end(form) }}
			</div>

		</div>


{% endblock %}
