<div class="modal fade modalBlock" id="modalDeleteActu{{ actualite.id }}" tabindex="-1" role="dialog" aria-labelledby="modalDeleteActuLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    	<form action="{{ path('cf_main_delete_actu', { id : actualite.id } )}}" method="post" {{ form_enctype(form) }}>
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="modalDeleteActuLabel">Êtes-vous sûr ?</h4>
	      </div>
	      <div class="modal-footer">
	        <button type="submit" class="btn btn-danger" id="button-validation-modal">Oui, supprimer l'actualité</button>
	        {{ form_rest(form) }}
	      </div>
	    </form>
    </div>
  </div>
</div>