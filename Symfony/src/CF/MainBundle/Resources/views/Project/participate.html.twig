{% extends "CFMainBundle::layout.html.twig" %}

{% block title %}
  Participer - {{ projet.nom }} - {{ parent() }}
{% endblock %}

{% block stylesheet %}
	{{ parent() }}
	<link href="{{asset('css/style_participate.css')}}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<form action="{{ path('cf_main_participate', { id : projet.id } )}}" method="post" {{ form_enctype(form) }}>
		<div class="form-group">
		    {{ form_start(form) }}
			{{ form_errors(form) }}

			{{ form_row(form.dons) }}

			<input type="submit" class="btn btn-primary" value="Valider"/>

			{{ form_end(form) }}
		</div>
	</form>
{% endblock %}

{% block javascript %}
	{{ parent() }}
	<script type="text/javascript" src="{{asset('js/participate_project.js')}}"></script>
{% endblock %}