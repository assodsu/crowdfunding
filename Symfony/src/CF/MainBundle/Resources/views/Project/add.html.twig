{% extends "CFMainBundle::layout.html.twig" %}

{% block title %}
  	{{ parent() }} - Lancer votre projet
{% endblock %}

{% block page_title %}Lancez votre projet{% endblock %}
{% block page_subtitle %}Vous avez un projet ambitieux ? Suivez ces étapes une à une et lancez votre projet !{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{asset('css/style_new_project.css')}}" rel="stylesheet"/>
{% endblock %}

{% block body %}
<div class="container-inner">
	<div class="stepwizard">
	    <div class="stepwizard-row">
	        <div class="stepwizard-step"><a href="#step-1">
	            <button type="button" class="btn btn-primary btn-circle">1</button></a>
	            <p>Général</p>
	        </div>
	        <div class="stepwizard-step"><a href="#step-2">
	            <button type="button" class="btn btn-default btn-circle" disabled="disabled">2</button></a>
	            <p>Description</p>
	        </div>
	        <div class="stepwizard-step"><a href="#step-3">
	            <button type="button" class="btn btn-default btn-circle" disabled="disabled">3</button></a>
	            <p>Histoire</p>
	        </div> 
	         <div class="stepwizard-step"><a href="#step-4">
	            <button type="button" class="btn btn-default btn-circle" disabled="disabled">4</button></a>
	            <p>Ressources</p>
	        </div>
	        <div class="stepwizard-step"><a href="#step-5">
	            <button type="button" class="btn btn-default btn-circle" disabled="disabled">5</button></a>
	            <p>Informations</p>
	        </div> 
	    </div>
	</div>

	<form action="{{ path('cf_main_addProjects')}}" method="post" {{ form_enctype(form) }}>
		{{ form_start(form) }}
		{{ form_errors(form) }}

		<div class="row step-content" id="step-1">
			<div class="fieldset">
				<div class="fieldset-form">
					<div class="form-group">
						{{ form_row(form.nom) }}
					</div>
				</div>

				<div class="fieldset-separator"></div>

				<div class="fieldset-infos">
