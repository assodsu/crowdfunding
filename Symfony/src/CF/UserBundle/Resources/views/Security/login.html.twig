{% extends "CFUserBundle::layout.html.twig" %}

{% block title %}
	Connexion - {{ parent() }}
{% endblock %}

{% block navbarConnect %} class="active" {% endblock %}

{% block stylesheet %}
	{{ parent() }}
	<link href="{{asset('css/style_connect.css')}}" rel="stylesheet"/>
{% endblock %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<section id="main-with-title">
	<div class="container">
		<div id="loginbox" style="margin-top:100px;" class="center-block">
            <div class="panel panel-info" >
                <div class="panel-heading" id="header">

                    <div class="panel-title">Connectez vous</div>

                    <div style="float:right; font-size: 80%; position: relative; top:-10px; color:white;"><a href="#">Mot de passe oubli√© ?</a></div>
                </div>
				<div style="padding-top:30px" class="panel-body" >

					{% if error %}
					    <div class="alert alert-danger alert-dismissible" role="alert">
					    	{{ error.messageKey|trans(error.messageData, 'security') }}
					    </div>
					{% endif %}
					
                    <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
					<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form" id="loginform">
					    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						
						<div style="margin-bottom: 25px" class="input-group" id="input-name">
						     <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
						     <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"placeholder="Adresse e-mail"/>
					    </div>
						
						<div style="margin-bottom: 25px" class="input-group" id="input-password">
					    <!--<label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>-->
					    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
					    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Mot de passe"/>
						</div>

						<div class="input-group" id="input-checkbox">
                            <div class="checkbox">
                              	<label>
						    		<input type="checkbox" id="login-remember" name="remember" value="on"/>
						    		{{ 'security.login.remember_me'|trans }}
					    		</label>
							</div>
						</div>

                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->
		
                            <div class="col-sm-12 controls">
                            	<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-primary"/>
                            </div>
                        </div>

						<div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                	Pas encore inscrit ?
                                <a href="{{ path('fos_user_registration_register') }}">inscrivez vous</a>
                                </div>
                            </div>
                        </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock fos_user_content %}