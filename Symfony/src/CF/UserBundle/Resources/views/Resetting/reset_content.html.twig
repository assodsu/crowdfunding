{% trans_default_domain 'FOSUserBundle' %}
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-user">
    <div class="connexion-content">
       {% if form_errors(form.plainPassword.first) %}
		    <div class="alert alert-info alert-dismissible" role="alert">
				Les mot de passes doivent être identique !
			</div>
		{% endif %}

        <p>
            Veuillez indiquer dans les champs ci-dessous votre nouveau mot de passe.
        </p>

        <div class="form-group">
            <label>nouveau mot de passe</label>
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            <label>confirmation du nouveau mot de passe</label>
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
        </div>

        {{ form_rest(form) }}

    </div>
    <div class="connexion-footer">
        <input type="submit" class="btn btn-success btn-lg" value="Réinitialiser" />
    </div>
</form>