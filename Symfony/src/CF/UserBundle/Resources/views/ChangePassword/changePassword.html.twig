{% extends "CFUserBundle::layout_profile.html.twig" %}

{% block title %}
	{{ parent() }} - Modification de profil
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block footer %}{% endblock %}

{% set menulink_editPassword = 1 %}

{% block cfuserbundle_body %}
	<div class="panel-profile-heading">
		<div class="title-panel-heading-mdp">
			<h1>Modifier son mot de passe</h1>
		</div>
	</div>

<div style="text-align: center;">
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-modifier-mdp">
    <div class="form-group">
        <label><i class="fa fa-key"></i></label>{{ form_widget(form.current_password, {'attr': {'placeholder': 'mot de passe actuel'}}) }}
    </div>

    <div class="form-group">
        <label><i class="fa fa-unlock"></i></label>{{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'nouveau mot de passe'}}) }}
    </div>

    <div class="form-group">
        <label><i class="fa fa-unlock"></i></label>{{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'confirmation du nouveau mot de passe'}}) }}
    </div>

    {{ form_rest(form) }}
    <div>
        <button type="submit" class="btn btn-success">Modifier le mot de passe du compte</button>
    </div>
</form>
</div>
{% endblock %}